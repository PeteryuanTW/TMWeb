@rendermode InteractiveServer
@inject NavigationManager navigationManager

<div class="bgcard" @onclick="@Nav">
    <div class="container h-100">
        <div class="row h-75">
            <div class="col iconcontainer">
                <img src=@($"/images/MyIcon/{IconName}.svg") class="icon" />
            </div>
        </div>
        <div class="row h-25">
            <div class="col text">
                @Text
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string NavLink { get; set; }
    [Parameter]
    public string IconName { get; set; }
    [Parameter]
    public string Text { get; set; }

    private void Nav()
    {
        if (!string.IsNullOrEmpty(NavLink))
        {
            navigationManager.NavigateTo($"/{NavLink}");
        }
    }
}
