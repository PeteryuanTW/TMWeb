                                                }
                                                else
                                                {

                                                }
                                            </DxFormLayoutItem>
                                        </DxFormLayoutGroup>
                                        <DxFormLayoutGroup>
                                            <DxFormLayoutItem Caption="X" CaptionPosition="CaptionPosition.Vertical" BeginRow="true" ColSpanLg="6">
                                                <DxSpinEdit Value="@targetMapComponent?.PositionX"></DxSpinEdit>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem Caption="Y" CaptionPosition="CaptionPosition.Vertical" ColSpanLg="6">
                                                <DxSpinEdit Value="@targetMapComponent?.PositionY"></DxSpinEdit>
                                            </DxFormLayoutItem>
