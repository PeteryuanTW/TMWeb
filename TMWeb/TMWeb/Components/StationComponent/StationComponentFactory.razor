@if (hasStation && StationParam.Enable)
{
    switch (StationParam?.StationType)
    {
        case 0:
            <StationSingleWorkorderSingleSerialComponent StationParam="@StationParam" />
            break;
        case 1:
            <StationSingleWorkorderMutipleSerialComponent StationParam="@StationParam" />
            break;
        case 2:
            <StationSingleWorkorderNoSerialComponent StationParam="@StationParam" />
            break;
        default:
            break;
    }
}



@code {
    [Parameter]
    public Station? StationParam { get; set; }
    private bool hasStation => StationParam != null;

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
