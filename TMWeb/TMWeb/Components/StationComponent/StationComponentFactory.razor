@if (hasStation)
{
    switch (FactoryStationParam?.StationType)
    {
        case 0:
            <StationSingleWorkorderSingleSerialComponent StationParam="@FactoryStationParam" />
            break;
        case 1:
            <StationSingleWorkorderMutipleSerialComponent StationParam="@FactoryStationParam"/>
            break;
        case 2:
            <StationSingleWorkorderNoSerialComponent StationParam="@FactoryStationParam" />
            break;
        default:
            break;
    }
}



@code {
    [Parameter]
    public Station? FactoryStationParam { get; set; }
    private bool hasStation => FactoryStationParam != null;

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
